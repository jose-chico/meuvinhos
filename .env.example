# Copie este arquivo para .env e ajuste os valores

# Ambiente
NODE_ENV=development
PORT=8000
APP_URL=http://localhost:8000

# Stripe — use TEST em dev; LIVE somente em produção
# Dev/Homolog: sk_test_...
STRIPE_SECRET_KEY=sk_test_xxx
# Produção: defina no provedor (não coloque live aqui)
# STRIPE_SECRET_KEY=sk_live_xxx

# JWT
JWT_SECRET=change_me
JWT_EXPIRES_IN=7d

# SMTP (opcional). Em dev você pode usar FAKE_MAIL=true
FAKE_MAIL=true
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@example.com