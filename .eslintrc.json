{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "prisma/migrations/**"
  ],
  "rules": {
    "linebreak-style": "off",
    "indent": "off",
    "no-mixed-spaces-and-tabs": "off",
    "quotes": ["error", "double", { "avoidEscape": true }],
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["public/**/*.js"],
      "env": { "browser": true, "es2022": true },
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
